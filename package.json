{
	"private": true,
	"scripts": {
		"start": "cross-env ENV=production MAX_WORKERS=2 CLUSTER_INSTANCES=1 npm run pm2-puppeteer-ssr:fastify",
		"dev": "cross-env ENV=development npm run start-dev",
		"dev:fastify": "cross-env ENV=development npm run start-dev:fastify",
		"build": "npx vue-tsc && npx webpack --mode=production",
		"build:esm": "npx vue-tsc && cross-env ESM=true npx webpack --mode=production",
		"preview": "npm run start-preview",
		"preview:fastify": "npm run start-preview:fastify",
		"start-dev": "cross-env MAX_WORKERS=4 node -r sucrase/register server/src/index.ts",
		"start-dev:fastify": "cross-env MAX_WORKERS=4 node -r sucrase/register server/src/index.fastify.ts",
		"start-preview": "cross-env MAX_WORKERS=7 node -r sucrase/register server/src/index.ts",
		"start-preview:fastify": "cross-env MAX_WORKERS=7 node -r sucrase/register server/src/index.fastify.ts",
		"pm2-puppeteer-ssr": "node --require sucrase/register server/src/puppeteer-ssr/pm2.ts",
		"pm2-puppeteer-ssr:fastify": "node --require sucrase/register server/src/puppeteer-ssr/pm2.fastify.ts",
		"start-puppeteer-ssr": "cross-env PUPPETEER_SSR_PORT=8080 npx pm2 -i 1 --silent start npm --name \"start-puppeteer-ssr\" -- run pm2-puppeteer-ssr",
		"prettier": "prettier src/**/*.{vue,js,ts}{,x} --no-error-on-unmatched-pattern --check",
		"lint": "npx vue-tsc && eslint src/**/*.{vue,js,ts}{,x} --no-error-on-unmatched-pattern --ignore-pattern node_modules/",
		"lint:fix": "npm run lint -- --fix",
		"prettier:fix": "npm run prettier -- --write",
		"format": "npm run prettier:fix && npm run lint:fix",
		"server-build": "npx sucrase --quiet ./server/src -d ./server/dist --transforms typescript,imports",
		"vercel-build": "yarn build",
		"pre-commit": "npm run server-build && git add ./server/dist & npx vue-tsc && lint-staged",
		"prepare": "git config core.autocrlf false && npx husky install",
		"preinstall": "node server/src/utils/GenerateServerInfo.js && node server/src/puppeteer-ssr/utils/CreatePuppeteerConfigFile.js"
	},
	"engines": {
		"node": "18.x"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	],
	"dependencies": {
		"vue": "^3.3.4",
		"vue-router": "^4.2.2"
	},
	"devDependencies": {
		"server": "file:./server",
		"commit-packages": "file:./config/commit-packages",
		"lint-and-format-packages": "file:./config/lint-and-format-packages",
		"build-tool-packages": "file:./config/build-tool-packages"
	},
	"eslintConfig": {
		"extends": [
			"./config/eslint.config.js"
		]
	},
	"prettier": "./config/prettier.config.js",
	"lint-staged": {
		"*.{vue,js,jsx,ts,tsx}": "npm run prettier:fix && npm run lint"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"feat",
					"style",
					"test",
					"fix",
					"docs",
					"release",
					"update",
					"perf",
					"chore"
				]
			]
		}
	},
	"config": {
		"commitizen": {
			"path": "cz-git",
			"czConfig": "./config/cz.config.js"
		}
	}
}
